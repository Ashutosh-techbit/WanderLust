<% layout('./layouts/boilerplate') -%> 
<body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter{
      text-align: center;
      margin-top: 2rem;
      margin-right: 2rem;
      opacity: 0.7;

    }

    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }

    .filter p{
      font-size: 0.8rem;
    }

    .taxinfo{
      display: none;
    }

    .tax-toggle{
      border: 1px solid rgb(19, 1, 57);
      border-radius: 1rem;
      height: 3.1rem;
      display: flex;
      align-items: center;
      padding: 1rem;
      margin-left: 18rem;
    }
     
  </style>
   
   <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree-city"></i></div>
        <p>Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farm</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Artic</p>
      </div>
      
      <div class="tax-toggle">
       <div class="form-check-reverse form-switch">
         <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
         <label class="form-check-label" for="switchCheckDefault">Display prices after taxes</label>
       </div>
      </div>
   </div>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(let Listing of allListings){%>
    <a href="/listings/<%= Listing._id%>" class="listing-link">
        <!-- <div class="listing-card"> -->
        <div class="card col listing-card">
        <img
          src="<%= Listing.image.url %>"
          class="card-img-top"
          alt="Listing-image"
          style="height: 20rem"
        />

        <div class="card-body">
            <div class="card-img-overlay"></div>
          <b class="card-title"><%= Listing.title%></b>
          <p class="card-text">
            &#8377; <%= Listing.price.toLocaleString("en-IN") %>/night
            <i class="taxinfo"> &nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div></a
    >

    <%}%>
  </div>

  <!-- <%for(let Listing of allListings){%>
    <li><a href="/listings/<%= Listing._id%>"><%= Listing.title%></a></li>
        <%}%> -->
</body>


<script>
  let taxswitch = document.getElementById("switchCheckDefault");
  taxswitch.addEventListener("click",()=>{
    let taxinfo = document.getElementsByClassName("taxinfo");
    for(info of taxinfo){
      if(info.style.display != "inline"){
        info.style.display= "inline"
      }else{
        info.style.display= "none"
      }
    }

  })

  
</script>